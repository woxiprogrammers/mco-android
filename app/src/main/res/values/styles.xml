<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="android:editTextStyle">@style/MyEditTextStyle</item>
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
        <!--<item name="alertDialogTheme">@style/MyDialogTheme</item>-->
        <!--<item name="dialogTheme">@style/AppDialogTheme</item>-->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:typeface">sans</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorTextLight</item>
        <item name="android:typeface">sans</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MyButtonStyle" parent="android:Widget.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">@drawable/selectable_button_background_red</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="MyTextInputLayoutHintStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorDivider</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyTextInputLayoutStyle">
        <item name="android:textColor">@color/colorDivider</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/colorDivider</item>
        <item name="colorControlActivated">@color/colorDivider</item>
        <item name="colorControlHighlight">@color/colorDivider</item>
    </style>

    <style name="StyledTilEditText">
        <item name="android:theme">@style/MyTextInputLayoutStyle</item>
    </style>
    <!--Text with Shadow-->
    <style name="TextAppearance.Design.CollapsingToolbar.Expanded.Shadow">
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">25</item>
        <item name="android:shadowColor">@android:color/holo_red_dark</item>
    </style>

