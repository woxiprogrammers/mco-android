<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewPreview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_12dp"/>

        <TextView
            android:id="@+id/textViewDownloadImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingLeft="@dimen/dimen_4dp"
            android:paddingRight="@dimen/dimen_4dp"
            android:background="@drawable/background_button_pressed"
            android:text="Download"/>

        <ProgressBar
            android:id="@+id/progressBarDownloadImage"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textviewComments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#e8e8e8"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"
            android:text="COMMENTS"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/textviewVersions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#e8e8e8"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"
            android:text="VERSIONS"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

</LinearLayout>