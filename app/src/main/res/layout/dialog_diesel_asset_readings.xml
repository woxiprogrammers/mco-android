<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:orientation="vertical"
              android:padding="@dimen/dimen_10dp"
              android:background="@drawable/background_button_normal"
              android:weightSum="1">


    <TextView
        android:id="@+id/text_view_topUpMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set current time as a Top Up Time"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:textSize="@dimen/dimen_18dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_readings">
        <TextView
            android:id="@+id/text_view_startPoint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:textSize="@dimen/dimen_18dp"/>

        <EditText
            android:id="@+id/edit_text_add_start_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:digits="0123456789"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="KM"/>

    </LinearLayout>





</LinearLayout>