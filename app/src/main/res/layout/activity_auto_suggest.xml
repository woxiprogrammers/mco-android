<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_10dp">

    <EditText
        android:id="@+id/editTextAutoSuggest"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44dp"
        android:paddingBottom="@dimen/dimen_16dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewSearchResultList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/editTextAutoSuggest"
        android:scrollbars="vertical"/>

    <Button
        android:id="@+id/buttonAddAsNewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selectable_button_background_gray"
        android:layout_centerInParent="true"
        android:text="@string/add_as_new_item"/>
</RelativeLayout>

