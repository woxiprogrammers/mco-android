<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/mainLinearLayoutViewSalary"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/setStatus"
                        style="@style/TextViewTitleStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:layout_weight="0.5"
                        android:padding="@dimen/dimen_8dp"
                        android:text="status"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/downloadVoucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/background_button_pressed"
                        android:padding="@dimen/dimen_8dp"
                        android:text="Download Voucher"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linerLayoutSetPaymentMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:text="Paid From :"
                        android:textColor="@color/colorTextLight"/>

                    <EditText
                        android:id="@+id/edittextSetPaymentMode"
                        style="@style/MyEditTextHeightSTyle"
                        android:layout_width="match_parent"
                        android:background="@android:drawable/editbox_background_normal"
                        android:enabled="false"
                        android:focusable="false"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linerLayoutSetBankName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:text="Bank Name :"
                        android:textColor="@color/colorTextLight"/>

                    <EditText
                        android:id="@+id/edittextSetBankName"
                        style="@style/MyEditTextHeightSTyle"
                        android:layout_width="match_parent"
                        android:background="@android:drawable/editbox_background_normal"
                        android:enabled="false"
                        android:focusable="false"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linerLayoutSetSelectedNames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:text="Employee Id/Name:"
                        android:textColor="@color/colorTextLight"/>

                    <EditText
                        android:id="@+id/edittextSetEmpName"
                        style="@style/MyEditTextHeightSTyle"
                        android:layout_width="match_parent"
                        android:background="@android:drawable/editbox_background_normal"
                        android:enabled="false"
                        android:focusable="false"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:text="@string/date"
                        android:textColor="@color/colorTextLight"/>

                    <EditText
                        android:id="@+id/editTextSetSalaryDate"
                        style="@style/MyEditTextHeightSTyle"
                        android:layout_width="match_parent"
                        android:background="@android:drawable/editbox_background_normal"
                        android:enabled="false"
                        android:focusable="false"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSetLayoutForSalary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_3dp"
                            android:text="Wages:"
                            android:textColor="@color/colorTextLight"/>

                        <EditText
                            android:id="@+id/edittextWeihges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/editbox_background_normal"
                            android:digits="0123456789"
                            android:enabled="false"
                            android:inputType="number"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_3dp"
                            android:text="Days:"
                            android:textColor="@color/colorTextLight"/>

                        <EditText
                            android:id="@+id/edittextSetDay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/editbox_background_normal"
                            android:digits="0123456789."
                            android:enabled="false"
                            android:inputType="number"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:text="@string/amount"
                        android:textColor="@color/colorTextLight"/>

                    <EditText
                        android:id="@+id/editTextSetSalaryAmount"
                        style="@style/MyEditTextHeightSTyle"
                        android:layout_width="match_parent"
                        android:background="@android:drawable/editbox_background_normal"
                        android:enabled="false"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutSetPTPF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_4dp"
                            android:text="PT:"
                            android:textColor="@color/colorTextLight"/>

                        <EditText
                            android:id="@+id/editTextSetPT"
                            style="@style/MyEditTextHeightSTyle"
                            android:layout_width="match_parent"
                            android:background="@android:drawable/editbox_background_normal"
                            android:digits="0123456789."
                            android:inputType="number"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_4dp"
                            android:text="PF:"
                            android:textColor="@color/colorTextLight"/>

                        <EditText
                            android:id="@+id/editTextPF"
                            style="@style/MyEditTextHeightSTyle"
                            android:layout_width="match_parent"
                            android:background="@android:drawable/editbox_background_normal"
                            android:digits="0123456789."
                            android:inputType="number"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutESICTDS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_4dp"
                            android:text="ESIC:"
                            android:textColor="@color/colorTextLight"/>

                        <EditText
                            android:id="@+id/editTextSetESIC"
                            style="@style/MyEditTextHeightSTyle"
                            android:layout_width="match_parent"
                            android:background="@android:drawable/editbox_background_normal"
                            android:digits="0123456789."
                            android:inputType="number"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_4dp"
                            android:text="TDS:"
                            android:textColor="@color/colorTextLight"/>

                        <EditText
                            android:id="@+id/editTextSetTDS"
                            style="@style/MyEditTextHeightSTyle"
                            android:layout_width="match_parent"
                            android:background="@android:drawable/editbox_background_normal"
                            android:digits="0123456789."
                            android:inputType="number"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearPayableAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:text="@string/payableAmount"
                        android:textColor="@color/colorTextLight"/>

                    <EditText
                        android:id="@+id/edittextSetPayableAmount"
                        style="@style/MyEditTextHeightSTyle"
                        android:layout_width="match_parent"
                        android:background="@android:drawable/editbox_background_normal"
                        android:enabled="false"/>
                </LinearLayout>


                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_4dp"
                    android:fadeScrollbars="false"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/linearLayoutSetImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">
                    </LinearLayout>
                </HorizontalScrollView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    >

                    <EditText
                        android:id="@+id/editTextSetSalaryRemark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFD740"
                        android:enabled="false"
                        android:hint="@string/tap_too_add_note"
                        android:padding="@dimen/dimen_16dp"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/dimen_16dp"
                        android:visibility="gone"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBarToLoadVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>