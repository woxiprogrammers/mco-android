<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.android.purchase_details.PurchaseRequestDetailsHomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_purchase_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

    <View
        android:id="@+id/viewDivider"
        style="@style/style_horizontal_line"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/purchase_details_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingBottom="@dimen/margin_20"
        android:layout_gravity="start"
        app:itemBackground="?attr/selectableItemBackground"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:menu="@menu/purchase_summary_menu"/>
</LinearLayout>
