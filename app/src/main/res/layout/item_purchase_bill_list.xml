<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="@dimen/dimen_4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_purchase_request_materials"
                style="@style/TextViewTitleStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cement"/>

            <TextView
                android:id="@+id/textView_purchase_request_status"
                android:layout_width="wrap_content"
                android:text="Bill Pending"
                android:layout_height="wrap_content"
                style="@style/MyTextViewLabelStyle"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textView_grn_quantity"
            style="@style/TextViewChildStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PON201734"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/textView_purchase_order_format"
            style="@style/TextViewChildStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PON201734"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textView_purchase_grn"
            style="@style/TextViewChildStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GRN2018123"/>

        <TextView
            android:id="@+id/textView_purchase_request_date"
            style="@style/TextViewChildStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="08-Jan-2018"/>
    </LinearLayout>
</android.support.v7.widget.CardView>