<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewSetVendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:textColor="@color/colorTextLight"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:text="Materials:"
            android:textColor="@color/colorTextLight"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutSetInflateNames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4dp"
        android:fadeScrollbars="false">

        <LinearLayout
            android:id="@+id/llSetMatImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/linearLayoutSetGrnNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:text="GRN Number:"
                android:textColor="@color/colorTextLight"/>

            <EditText
                android:id="@+id/editTextSetGrnNum"
                android:layout_width="match_parent"
                style="@style/MyEditTextHeightSTyle"
                android:background="@android:drawable/editbox_background_normal"
                android:enabled="false"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:text="Bill Number:"
                android:textColor="@color/colorTextLight"/>

            <EditText
                android:id="@+id/editTextSetBillumber"
                android:layout_width="match_parent"
                style="@style/MyEditTextHeightSTyle"
                android:background="@android:drawable/editbox_background_normal"
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:text="Vehicle Number:"
                android:textColor="@color/colorTextLight"/>

            <EditText
                android:id="@+id/editTextSetVehNum"
                android:layout_width="match_parent"
                style="@style/MyEditTextHeightSTyle"
                android:background="@android:drawable/editbox_background_normal"
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_3dp"
                    android:text="In Time:"
                    android:textColor="@color/colorTextLight"/>

                <EditText
                    android:id="@+id/editTextSetInTime"
                    android:layout_width="match_parent"
                    style="@style/MyEditTextHeightSTyle"
                    android:background="@android:drawable/editbox_background_normal"
                    android:enabled="false"
                    android:focusable="false"
                    android:inputType="time"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_4dp"
                    android:text="Out Time:"
                    android:textColor="@color/colorTextLight"/>

                <EditText
                    android:id="@+id/editTextSetOutTime"
                    android:layout_width="match_parent"
                    style="@style/MyEditTextHeightSTyle"
                    android:background="@android:drawable/editbox_background_normal"
                    android:enabled="false"
                    android:focusable="false"
                    android:inputType="time"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutSetBillAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:text="Bill Amount:"
                android:textColor="@color/colorTextLight"/>

            <EditText
                android:id="@+id/editTextSetBillAmount"
                android:layout_width="match_parent"
                style="@style/MyEditTextHeightSTyle"
                android:background="@android:drawable/editbox_background_normal"
                android:enabled="false"
                android:inputType="number"/>
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:fadeScrollbars="false">

            <LinearLayout
                android:id="@+id/linearLayoutSetPaymentImageLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:visibility="visible">
            </LinearLayout>
        </HorizontalScrollView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewTransRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/editextSetTransRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFD740"
                android:enabled="false"
                android:hint="@string/tap_too_add_note"
                android:onClick="addNote"
                android:padding="@dimen/dimen_16dp"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dimen_16dp"/>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</LinearLayout>

