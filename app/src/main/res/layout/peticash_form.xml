<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category:"
                    android:textColor="@color/colorTextLight"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background">

                    <Spinner
                        android:id="@+id/spinner_category_array"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/category_array"
                        />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutForCategoryPurchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Type:"
                        android:textColor="@color/colorTextLight"/>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background">

                        <Spinner
                            android:id="@+id/spinner_material_or_asset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/selectType"
                            />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Material Source:"
                        android:textColor="@color/colorTextLight"/>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background">

                        <Spinner
                            android:id="@+id/spinner_peticash_source"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/destination_array_move_in"
                            />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linerLayoutSelectedNames_PC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_view_selected_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Client"
                        android:textColor="@color/colorTextLight"/>

                    <EditText
                        android:id="@+id/edit_text_selected_source_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background_normal"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Material Name"
                        android:textColor="@color/colorTextLight"/>

                    <EditText
                        android:id="@+id/edit_text_item_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background_normal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_3dp"
                            android:text="Quantity:"
                            android:textColor="@color/colorTextLight"/>

                        <EditText
                            android:id="@+id/edittextQuantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/editbox_background_normal"
                            android:digits="0123456789"
                            android:inputType="number"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_3dp"
                            android:text="Unit:"
                            android:textColor="@color/colorTextLight"/>

                        <FrameLayout
                            android:id="@+id/frameLayout_UnitSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/editbox_background">

                            <Spinner
                                android:id="@+id/spinner_select_units"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </FrameLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        android:textColor="@color/colorTextLight"/>

                    <EditText
                        android:id="@+id/editText_Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background_normal"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_forSupplierInOutTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/in_time"
                            android:textColor="@color/colorTextLight"/>

                        <EditText
                            android:id="@+id/edit_text_inTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/editbox_background_normal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/out_time"
                            android:textColor="@color/colorTextLight"/>

                        <EditText
                            android:id="@+id/edit_text_outTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/editbox_background_normal"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lineraLayoutBillNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bill_number"
                        android:textColor="@color/colorTextLight"/>

                    <EditText
                        android:id="@+id/edit_text_BillNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background_normal"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearBillAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bill_amount"
                        android:textColor="@color/colorTextLight"/>

                    <EditText
                        android:id="@+id/edit_text_billamount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background_normal"
                        android:digits="0123456789"
                        android:inputType="number"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_forSupplierVehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vehicle_number"
                        android:textColor="@color/colorTextLight"/>

                    <EditText
                        android:id="@+id/edit_text_vehicleNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:background="@android:drawable/editbox_background_normal"/>

                </LinearLayout>

                <include
                    layout="@layout/layout_multi_capture_select"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_4dp"
                    android:fadeScrollbars="false">

                    <LinearLayout
                        android:id="@+id/linearLayoutUploadImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">
                    </LinearLayout>
                </HorizontalScrollView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    >

                    <EditText
                        android:id="@+id/editText_addNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFD740"
                        android:hint="@string/tap_too_add_note"
                        android:padding="@dimen/dimen_16dp"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/dimen_16dp"/>
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <include
                android:id="@+id/layoutEmployeeInformation"
                layout="@layout/employee_information"
                android:visibility="gone"/>

            <Button
                android:id="@+id/button_generate_grn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:background="@drawable/background_button_pressed"
                android:backgroundTint="@color/colorAccent"
                android:padding="@dimen/dimen_8dp"
                android:text="@string/generate_grn"
                android:textColor="@color/colorWhite"/>

            <LinearLayout
                android:id="@+id/linearLayoutGRN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grn_number"
                    android:textColor="@color/colorTextLight"/>

                <EditText
                    android:id="@+id/editText_grnNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background_normal"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutPayableAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payableAmount"
                    android:textColor="@color/colorTextLight"/>

                <EditText
                    android:id="@+id/editText_PayableAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background_normal"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutRefNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reference Number"
                    android:textColor="@color/colorTextLight"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background_normal"/>
            </LinearLayout>

            <include
                android:id="@+id/layout_capture"
                layout="@layout/layout_multi_capture_select"
                android:visibility="gone"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_4dp"
                android:fadeScrollbars="false">

                <LinearLayout
                    android:id="@+id/linearLayoutUploadBillImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/button_pay_with_peticash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:background="@drawable/background_button_pressed"
                android:backgroundTint="@color/colorAccent"
                android:padding="@dimen/dimen_8dp"
                android:text="@string/paywithpeticash"
                android:textColor="@color/colorWhite"
                android:visibility="gone"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>