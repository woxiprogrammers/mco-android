<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:cardCornerRadius="8dp"
        android:layout_margin="@dimen/dimen_5dp"
        app:cardElevation="@dimen/dimen_4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_Date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:layout_weight="0.5"
                    android:text="30 July"/>

                <TextView
                    android:id="@+id/textviewItemStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:text="Approved"
                    android:textColor="#ff0000"
                    android:textSize="@dimen/dimen_14dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textviewItemName"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:layout_height="wrap_content"
                        android:text="Wooden Ply Shaded Door"/>

                    <TextView
                        android:id="@+id/textviewItemUnits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:text="357 units"
                        android:textSize="@dimen/text_14sp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutApproveDisapprove"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_approve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_8dp"
                        android:background="@drawable/ic_approve"/>

                    <ImageView
                        android:id="@+id/iv_disapprove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_8dp"
                        android:background="@drawable/ic_disapprove"/>
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/textviewCreatedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:textSize="@dimen/text_14sp"/>
            <TextView
                android:id="@+id/textviewApprovedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/textViewMaterialHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button_pressed"
                android:gravity="center"
                android:padding="@dimen/dimen_8dp"
                android:text="History"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"/>
            <Button
                android:id="@+id/button_move_to_indent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selectable_button_background_gray"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_4dp"
                android:paddingRight="@dimen/dimen_4dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="Move To Indent"
                android:textSize="@dimen/text_12sp"
                android:visibility="visible"/>
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_4dp"
                android:fadeScrollbars="false">

                <LinearLayout
                    android:id="@+id/ll_PaymentImageLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:visibility="gone">
                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.v4.widget.NestedScrollView>