<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="@dimen/dimen_4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_purchase_request_materials"
                style="@style/TextViewTitleStyle"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="cement"/>

            <ImageView
                android:id="@+id/imageViewIsEmailSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_purchase_request_id"
                style="@style/TextViewChildStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PR20182101"/>

            <TextView
                android:id="@+id/textView_purchase_request_status"
                style="@style/MyTextViewLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ksdksdksdksdksdks"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textview_client_name"
            style="@style/TextViewChildStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/linearLayoutToHideApproved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textViewApproved"
                style="@style/TextViewChildStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Approved By : .....-"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_purchase_request_date"
            style="@style/TextViewChildStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created:..."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayoutClosePO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textViewClose"
                    style="@style/TextViewChildStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button_pressed"
                    android:gravity="center"
                    android:padding="@dimen/dimen_5dp"
                    android:text="Close"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textViewdetails"
                style="@style/TextViewChildStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button_pressed"
                android:gravity="center"
                android:padding="@dimen/dimen_5dp"
                android:text="Details"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>